import { BIP44Node, getBIP44AddressKeyDeriver } from '@metamask/key-tree';


/* export const getPrivateKey = async (): Promise<BIP44Node> => { */
export async function getPrivateKey(): Promise<BIP44Node> {
    const TestNode = await snap.request({
        method: 'snap_getBip44Entropy',
        params: {
          coinType: 1,  
        },
      });

      const deriveAddress = await getBIP44AddressKeyDeriver(TestNode);

      // These are BIP-44 nodes containing the extended private keys for
      // the respective derivation paths.

      // m / 44' / 3' / 0' / 0 / 0
      const  addressKey0 = await deriveAddress(0);
      return addressKey0
}